<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--       android:format12Hour="dd-MM-yyyy"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/tvempName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:text="Name"
                android:textSize="20sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="duration"
                android:text=""
                android:textSize="20sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/etStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="start"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="test"
                android:text=""
                android:textSize="20sp"
                android:visibility="invisible" />


            <EditText
                android:id="@+id/etEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="end"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/imbtnHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:background="@null"
                app:srcCompat="@drawable/homeshadow" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextClock
                android:id="@+id/textClockDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:format12Hour="yyyy-MM-dd"
                android:gravity="center_horizontal"
                android:hint="Jan 1, 2022"
                android:textColor="#d41709"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextClock
                android:id="@+id/textClock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:format12Hour="hh:mm:ss a"
                android:gravity="center_horizontal"
                android:hint="12:00:00 PM"
                android:layout_marginTop="15dp"
                android:textColor="#E91E63"
                android:textSize="20pt"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/current_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:hint="24:00:00"
                android:text=""
                android:textSize="26sp"
                android:visibility="visible" />
        </LinearLayout>

        <!--    <Button-->
        <!--        android:id="@+id/get_current_time"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginTop="50dp"-->
        <!--        android:onClick="getCurrentTime"-->
        <!--        android:text="Get Current Time" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etEmpCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="0 0 0 0"
                android:maxLength="4"
                android:text=""
                android:textColor="#006891"
                android:textColorHint="#1B0091"
                android:textSize="50dp" />

            <!--        <EditText-->
            <!--            android:id="@+id/etEmpCode2"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_weight="4"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:hint=""-->
            <!--            android:text="-"-->
            <!--            android:textColor="#006891" />-->

            <!--        <EditText-->
            <!--            android:id="@+id/etEmpCode3"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_weight="4"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:hint=""-->
            <!--            android:text="-"-->
            <!--            android:textColor="#006891" />-->

            <!--        <EditText-->
            <!--            android:id="@+id/etEmpCode4"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_weight="4"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:hint=""-->
            <!--            android:text="-"-->
            <!--            android:textColor="#006891" />-->
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:weightSum="3"
            app:columnCount="3"
            app:orientation="horizontal">


            <Button
                android:id="@+id/btn7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="7"
                android:textSize="60px"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="8"
                android:textSize="60px" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="9"
                android:textSize="60px" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="60px"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="5"
                android:textSize="60px" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="60px"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="60px"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="2"
                android:textSize="60px"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="60px"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="150dp"
                android:layout_height="73dp"
                android:text="OK"
                android:textSize="60px"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textSize="60px"
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/btnErase"
                android:layout_width="150dp"
                android:layout_height="73dp"
                android:text="Del"
                android:textSize="55px"
                app:layout_column="2"
                app:layout_row="3" />

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/tvTimeMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time OUT"
            android:textAlignment="center"
            android:textSize="18sp" />



        <!--        android:format12Hour="hh:mm:ss a"-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>