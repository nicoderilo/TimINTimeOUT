    </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:weightSum="3"
        app:orientation="horizontal"
        app:columnCount="3">


        <Button
            android:id="@+id/btn7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="9" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="6"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="3"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:textSize="40px"
            android:text="OK"
            android:layout_marginTop="10dp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="0"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnErase"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:textSize="35px"
            android:text="Delete"
            app:layout_column="2"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tvTimeMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time OUT"
        android:textAlignment="center"
        android:textSize="26sp" />

        <!--        android:format12Hour="hh:mm:ss a"-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>