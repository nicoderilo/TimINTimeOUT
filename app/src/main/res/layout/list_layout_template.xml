<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTimeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textSize="22sp" /> <!--not using-->

        <TextView
            android:id="@+id/tvEmpUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTimeId"
            android:paddingRight="15dp"
            android:textSize="22sp" /><!--not using-->

        <TextView
            android:id="@+id/tvEmpFName"
            android:layout_width="105dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvEmpUser"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvStartTime"
            android:hint="test"
            android:layout_width="75dp"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvEmpFName"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="75dp"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvStartTime"
            android:freezesText="false"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvEndTime"
            android:textSize="22sp" /><!--not using-->

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvDuration"
            android:textSize="22sp" />




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>